<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="customEncoder" class="com.joo.security2.CustomEncoder"></bean>

	<security:http>
		<security:intercept-url pattern="/all" access="permitAll"/>
		<security:intercept-url pattern="/member" access="hasRole('ROLE_MEMBER') or hasRole('ROLE_ADMIN1')"/>
		<security:intercept-url pattern="/admin" access="hasRole('ROLE_ADMIN1')"/>
		<security:intercept-url pattern="/admin2" access="hasRole('ROLE_ADMIN2') or hasRole('ROLE_ADMIN1')"/>
		<security:form-login login-page="/customlogin"/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="member" password="member" authorities="ROLE_MEMBER"/>
				<security:user name="admin" password="admin" authorities="ROLE_ADMIN1"/>
				<security:user name="admin2" password="admin2" authorities="ROLE_ADMIN2"/>
			</security:user-service>
			<security:password-encoder ref="customEncoder"></security:password-encoder>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
